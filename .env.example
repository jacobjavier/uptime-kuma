# iCentral Environment Variables
# Copie este archivo a .env y configure las variables según su entorno

# Base de datos PostgreSQL (requerido para producción)
DATABASE_URL=postgresql://usuario:contraseña@host:5432/icentral_db

# Configuración de la aplicación
NODE_ENV=production
PORT=3001

# Configuración de base de datos alternativa (si no usa DATABASE_URL)
UPTIME_KUMA_DB_TYPE=postgres
UPTIME_KUMA_DB_HOSTNAME=localhost
UPTIME_KUMA_DB_PORT=5432
UPTIME_KUMA_DB_NAME=icentral_db
UPTIME_KUMA_DB_USERNAME=postgres
UPTIME_KUMA_DB_PASSWORD=password

# Seguridad
UPTIME_KUMA_DISABLE_FRAME_SAMEORIGIN=0

# Configuración opcional
# UPTIME_KUMA_HOST=0.0.0.0
# DATA_DIR=./data/
